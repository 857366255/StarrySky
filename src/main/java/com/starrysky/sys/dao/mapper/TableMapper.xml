<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starrysky.sys.dao.TableDao">
    <!--映射实体类-->
    <sql id="select_from" >SELECT id, name_ch, name_en FROM s_table</sql>
    <resultMap id="classesResultMap" type="com.starrysky.sys.po.Table">
        <id property="id" column="id"/>
        <result property="name_ch" column="name_ch"/>
        <result property="name_en" column="name_en"/>
    </resultMap>
    <!--查询全部数据-->
    <select id="findAll" parameterType="java.util.List"  resultMap="classesResultMap">
        <include refid="select_from" />
    </select>
    <!--查询-->
    <select id="findById" parameterType="int" resultMap="classesResultMap">
        <include refid="select_from" />  WHERE id=#{id}
    </select>
    <!--按条件查询-->
    <select id="findByCondition" parameterType="com.starrysky.sys.po.Table" resultMap="classesResultMap">
        <include refid="select_from" />
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="name_ch != null">
                AND name_ch = #{name_ch}
            </if>
            <if test="name_en != null">
                AND name_en = #{name_en}
            </if>
        </trim>
    </select>
    <!--增加-->
    <insert id="doCreate" parameterType="com.starrysky.sys.po.Table">
        INSERT INTO s_table
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name_ch != null">name_ch,</if>
            <if test="name_en != null">name_en,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name_ch != null">#{name_ch},</if>
            <if test="name_en != null">#{name_en},</if>
        </trim>
    </insert>
    <!--更新-->
    <update id="doUpdate" parameterType="com.starrysky.sys.po.Table">
        UPDATE s_table
        <trim prefix="SET" suffixOverrides=",">
            <if test="name_ch != null">name_ch=#{name_ch},</if>
            <if test="name_en != null">name_en=#{name_en},</if>
        </trim>
        WHERE id=#{id}
    </update>
    <!--批量删除-->
    <delete id="doRemoveBatch" parameterType="java.util.List">
        DELETE FROM s_table
        <where>
            id IN
            <foreach collection="list" item="ele" open="(" separator="," close=")">
                '${ele}'
            </foreach>
        </where>
    </delete>
    <!--删除-->
    <delete id="doRemove" parameterType="int">
        DELETE FROM s_table  WHERE id = #{id}
    </delete>

    <!--获得数据库表信息 autoMapping：设置是否启动自动映射功能-->
    <resultMap id="databaseTableMap" type="com.starrysky.sys.po.Table" autoMapping="false">
        <id property="id" column="id"/>
        <result property="name_ch" column="table_comment"/>
        <result property="name_en" column="table_name"/>
    </resultMap>
    <!--获取表结构-->
    <select id="getDatabaseTable" resultMap="databaseTableMap">
        CALL get_database_table()
    </select>
</mapper>