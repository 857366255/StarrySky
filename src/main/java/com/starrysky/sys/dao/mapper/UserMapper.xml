<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.starrysky.sys.dao.UserDao">

    <resultMap id="classesResultMap" type="com.starrysky.sys.vo.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <!--校验用户是否存在-->
    <select id="check" parameterType="com.starrysky.sys.vo.User" resultType="int">
        SELECT COUNT(*) FROM t_users WHERE user = #{user, jdbcType=VARCHAR}
    </select>
    <!--登入校验-->
    <select id="login" parameterType="com.starrysky.sys.vo.User" resultType="int">
        SELECT COUNT(*) FROM t_users
    </select>

    <!--查询全部数据-->
    <select id="findAll" parameterType="java.util.List" resultMap="classesResultMap">
        SELECT * FROM t_users
    </select>
    <!--查询-->
    <select id="findById" parameterType="int" resultType="com.starrysky.sys.vo.User">
        SELECT * FROM t_users WHERE id=#{id}
    </select>
    <!--按条件查询-->
    <select id="findByCondition" parameterType="com.starrysky.sys.vo.User" resultMap="classesResultMap">
    SELECT * FROM t_users WHERE 1=1
<!--        <if test="user != null">
           AND user LIKE CONCAT(CONCAT('%', #{user, jdbcType=VARCHAR}),'%')
        </if>
        <if test="name != null">
            AND name LIKE CONCAT(CONCAT('%', #{name, jdbcType=VARCHAR}),'%')
        </if>-->

</select>

    <!--增加-->
    <insert id="doCreate" parameterType="com.starrysky.sys.vo.User">
        INSERT INTO t_users(id,name)VALUES (#{id},#{name})
    </insert>

    <!--更新-->
    <update id="doUpdate" parameterType="com.starrysky.sys.vo.User">
        UPDATE t_users SET name=#{name} WHERE id=#{id}
    </update>

    <!--批量删除-->
    <delete id="doRemoveBatch" parameterType="java.util.List">
        DELETE FROM t_users
        <where>
            id IN
            <foreach collection="list" item="ele" open="(" close=")" separator=",">
                '${ele}'
            </foreach>
        </where>
    </delete>
    <!--删除-->
    <delete id="doRemove" parameterType="int">
        DELETE FROM t_users  WHERE id = #{id}
    </delete>


</mapper>